<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/edttext1"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Category Name"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edttext2"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Description"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_below="@id/edttext1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <Button
        android:id="@+id/asSave_btn"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="save"
    android:textColor="#C8DBB3"
    android:textStyle="bold"
    android:textSize="20sp"
    android:backgroundTint="#003B73"
    android:layout_below="@+id/edttext2"/>


    <Button
        android:id="@+id/asCancel_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textColor="#C8DBB3"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#003B73"
        android:layout_below="@id/edttext2"
        android:layout_toRightOf="@+id/asSave_btn"/>


</RelativeLayout>