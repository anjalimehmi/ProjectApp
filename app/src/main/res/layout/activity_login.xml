<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="158dp"
        android:layout_height="137dp"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to your account"
        android:layout_below="@id/imageView3"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textColor="#173A18"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="    Email"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-condensed"
        android:background="#ffffff"
        android:inputType="textPersonName|text"
        android:layout_marginTop="15dp"
        android:layout_below="@id/login"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="   Password"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:background="#ffffff"
        android:layout_below="@id/email"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/sin"
        android:layout_width="224dp"
        android:layout_height="74dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#173A18"
        android:text="LOGIN"
        android:textColor="#C8DBB3"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp" />


    <Button
        android:id="@+id/forget"
        android:layout_width="216dp"
        android:layout_height="58dp"
        android:layout_below="@id/sin"
        android:layout_centerHorizontal="true"
        android:background="173A18"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Forget password?"
        android:textColor="#F40707"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget"
        android:layout_alignParentStart="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="2dp"
        android:text="OR"
        android:textStyle="bold"
        android:textColor="#173A18"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp" />

    <Button
        android:id="@+id/google"
        android:layout_width="180dp"
        android:layout_height="68dp"
        android:layout_below="@id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#173A18"
        android:textColor="#C8DBB3"
        android:fontFamily="sans-serif-condensed"
        android:drawableLeft="@drawable/google"
        android:text="Google"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/noacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_below="@id/google"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#173A18"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/signUpp"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/google"
        android:layout_marginLeft="-19dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@id/noacc"
        android:background="173A18"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:text="Sign up"
        android:textColor="#F40707"
        android:textSize="19dp"
        android:textStyle="bold" />

</RelativeLayout>