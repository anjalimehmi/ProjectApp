<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Signup">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="158dp"
        android:layout_height="137dp"
        android:layout_marginTop="31dp"
       android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up for new account"
        android:layout_below="@id/imageView3"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#173A18"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="    Full name"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-condensed"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_below="@id/login"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="    Email"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-condensed"
        android:background="#ffffff"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="   Password"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif-condensed"
        android:background="#ffffff"
        android:layout_below="@id/email"/>


    <Button
        android:id="@+id/sin"
        android:layout_width="224dp"
        android:layout_height="74dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#173A18"
        android:text="Sign up"
        android:textColor="#C8DBB3"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="8dp"
        android:text="OR"
        android:textStyle="bold"
        android:textColor="#173A18"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp" />


    <TextView
       android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#173A18"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/here"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/already"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#C8DBB3"
        android:text="Login here"
        android:textColor="#F2140C"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="23dp" />







</RelativeLayout>