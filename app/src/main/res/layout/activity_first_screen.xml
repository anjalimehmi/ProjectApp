<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FirstScreen">

    <TextView
        android:id="@+id/begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin your"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="50sp"
        android:textColor="#173A18"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/yoga"
        android:layout_width="113dp"
        android:layout_height="183dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:text="Y"
        android:textSize="180sp"
        android:textStyle="bold"
        android:textColor="#173A18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yoga1"
        android:layout_width="126dp"
        android:layout_height="89dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="2dp"
        android:gravity="top"
        android:text="oga"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="#173A18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/begin" />

    <TextView
        android:id="@+id/jrny"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="84dp"
        android:text="journey"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#173A18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/begin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Here"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#173A18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yoga" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="307dp"
        android:layout_height="385dp"
        android:layout_marginStart="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pose1"
        tools:layout_editor_absoluteY="242dp"
        app:layout_constraintTop_toBottomOf="@id/jrny" />

    <Button
        android:id="@+id/nextsecondsc"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#173A18"
        android:gravity="right"
        android:text="Next>>"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#C8DBB3"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>